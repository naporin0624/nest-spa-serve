{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "rootDir": "./src",
    "outDir": "./lib",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "strict": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  }
}